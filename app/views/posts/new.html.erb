<h1>New Post</h1>

<% if flash[:messages]%>
  <% flash[:messages].each do |message| %> <br>
    <%= message %>
  <% end %>
<% end %>

<%= form_for @post do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %> <br>

    <%= f.label :content %>
    <%= f.text_area :content %> <br>
    

    <%= f.label :Blogger%>
    <%= f.collection_select :blogger_id, Blogger.all, :id, :name %> <br>

    <%= f.label :Destination%>
    <%= f.collection_select :destination_id, Destination.all, :id, :name %> <br>


<%= f.submit%>

<% end %>